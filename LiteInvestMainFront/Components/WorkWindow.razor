					Ticks.RemoveAt(0);
			}

			await InvokeAsync(() => { Chart.RefreshData(); });

		};

		ApiDataService.SubscribeOrderBook(secutityMain.id);
		ApiDataService.SubcribeTick(secutityMain.id);

		return base.OnInitializedAsync();
